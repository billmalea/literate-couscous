{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/__tests__/**/*.test.ts", "**/__tests__/**/*.spec.ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/index.ts"
  ],
  "coveragePathIgnorePatterns": ["/node_modules/", "/dist/"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", {
      "tsconfig": {
        "esModuleInterop": true
      }
    }]
  }
}
