{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/index.ts"
  ],
  "coveragePathIgnorePatterns": ["/node_modules/", "/dist/"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
